		{
			"type": "cppbuild",
			"label": "Build with GCC 13.1.0",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++20",
				"${file}",
				"-o",
				"${fileDirname}\\Simulator.exe",
				"-I", "C:/Users/lmaen/Documents/Libraries/SFML-2.6.1/include",
                "-L", "C:/Users/lmaen/Documents/Libraries/SFML-2.6.1/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
